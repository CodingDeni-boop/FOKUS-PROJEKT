import cv2 as cv
import pandas as pd
import numpy as np

img1 = cv.imread("mouse_images/testimg1.jpg")

"""cv.imshow("Image", img1)
cv.waitKey()"""

def scale(image, scale):
    y = round(image.shape[0]*scale)
    x = round(image.shape[1]*scale)
    shape_scaled = (x,y,3)      # 3 is number of channels --> RGB 
    scaled_image = cv.resize(image, [x,y], interpolation=cv.INTER_AREA)
    print(f"image scaled from {image.shape[1]}X{image.shape[0]} to {x}X{y}")
    return scaled_image

scaled_image = scale(img1,0.5)

cv.imshow("Image", scaled_image)
cv.waitKey()













print("program quit")